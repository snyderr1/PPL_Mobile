<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WorkoutTracker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorSecondary">@color/my_dark_secondary</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:background">@color/black</item>
        <item name="android:textAppearanceButton">@style/ButtonText</item>
        <item name="android:colorButtonNormal">@color/my_dark_secondary</item>
    </style>
    <style name="ButtonText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12dp</item>
    </style>
    <style name="EditButton" parent="@android:style/Widget.Button">
        <item name="colorPrimary">#00FFFFFF</item>
        <item name="iconTint">@color/white</item>
    </style>
    <style name="RemoveButton" parent="@android:style/Widget.Button">
        <item name="colorPrimary">#00FF0000</item>
        <item name="iconTint">@color/white</item>
    </style>
    <style name="AddButton">
        <item name="backgroundTint">@color/my_dark_secondary</item>
    </style>


</resources>